<table class="tablesorter">
    <thead>
        <tr>
            <th class="unprintable" style="background-image:none;" width="20">&nbsp;</th>
            <th>[#name]</th>
            <th width="60">[#total]</th>
            <th width="60">[#off_rate]</th>
            <th width="60">[#on_rate]</th>
        </tr>
    </thead>
	<tbody>
    	[@rows]
	</tbody>
    <tfoot>
        <tr>
            <th class="unprintable"  align="center">&nbsp;</th>
            <th class="reverse_align"><strong>[#total]</strong></th>
            <th><strong>[@class_total]</strong></th>
            <th><strong>[@class_per] %</strong></th>
            <th><strong>[@class_attend] %</strong></th>
		</tr>
    </tfoot>
</table>