<tr>
	<td class="skill_title">[@title]</td>
    <td><input type="text" name="group" update="updateSkillGroup" skill_id="[@id]" value="[@group]" /></td>
	<td title="[@tooltip]" align="center">[@count]</td>
    <td class="unprintable">
    	<button type="button" class="ui-state-default hoverable circle_button" skill_id="[@id]" module="resources" action="editSkill" module="resources"><span class="ui-icon ui-icon-pencil"></span></button>
    </td>
    <td class="unprintable">
    	<button type="button" class="ui-state-default hoverable circle_button" skill_id="[@id]" module="resources" action="deleteSkill" module="resources"><span class="ui-icon ui-icon-close"></span></button>
    </td>
</tr>