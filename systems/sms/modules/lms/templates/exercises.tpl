<form class="exercise_answer scope">
	<fieldset class="ui-state-highlight ui-corner-all">
    	<table>
        	<tr>
            	<td>
                	<text class="holder-book-[@book_id]">[@book_name]</text>
                </td>
                <td class="reverse_align">
                	<ul style="list-style:none">
                    	<li><b>[#questions]: </b>[@total_questions]</li>
                        <li><b>[#points]: </b>[@total_points]</li>
                        <li><b>[#time]: </b>[@total_time]</li>
                    </ul>
                </td>
            </tr>
            <td colspan="2" align="center">
            	[@title]
            </td>
        </table>
    </fieldset>
    <hr style="height:3px; margin:5px 0px 10px" />
    [@pages_nav]
    <div class="pages_place_holder [@slider]">
    	[@data]
    </div>
</form>