<div class="ui-widget-content ui-corner-all transparent_div">
    <div class="toolbox">
        <a action="newSupplier">[#new] <span class="ui-icon ui-icon-document"></span></a>
        <a action="searchSupplier">[#search] <span class="ui-icon ui-icon-search"></span></a>
    </div>
    <table class="tablesorter">
        <thead>
            <tr>
                <th width="24" style="background-image:none" class="unprintable">&nbsp;</th>
                <th>[#name]</th>
                <th width="80">[#balance]</th>
            </tr>
        </thead>
        <tbody>
            [@suppliers_list]
        </tbody>
    </table>
</div>